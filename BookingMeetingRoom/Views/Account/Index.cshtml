@model BookingMeetingRoom.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<form asp-controller="Account" asp-action="Create">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="row text-center">
                    <div class="form-group">
                        <img src="images/person.svg" width="120" height="120" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="Position"></label>
                        <input asp-for="Position" class="form-control" />
                        <span class="text-danger" asp-validation-for="Position"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="Department"></label>
                        <input asp-for="Department" class="form-control" />
                        <span class="text-danger" asp-validation-for="Department"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="TelNumber"></label>
                        <input asp-for="TelNumber" class="form-control" />
                        <span class="text-danger" asp-validation-for="TelNumber"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check"></i> Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
