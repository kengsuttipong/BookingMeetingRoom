@model BookingMeetingRoom.ViewModels.BookingIndexViewModel

@{
    ViewData["Title"] = "Booking Page";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12">
            <h3 class="text-uppercase fw-bold blog-graphic-text col-2">
                <i class="bi bi-check-circle"></i> Booking
            </h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12 rounded-3 shadow-lg p-4">
            <form asp-controller="Booking" asp-action="Confirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="hidAvailableDayId" asp-for="RoomId" />
                
                <div class="row">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-6">
                                <img src="~/images/carouse1.jpg" class="img-fluid rounded-start" alt="...">
                                <input type="hidden" id="hidFacilitiesId" asp-for="RoomImage" />
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <h5 class="text-danger card-title">
                                        <strong>@Model.RoomName</strong>
                                        <input type="hidden" asp-for="RoomName" />
                                    </h5>
                                     <div class="row">
                                        <small class="card-text">
                                            <i class="bi bi-calendar4-week text-success"></i>
                                            Available Book Day : @Model.RoomAvailableDay
                                            <input type="hidden" asp-for="RoomAvailableDay" />
                                        </small>
                                    </div>
                                    <div class="row">
                                        <small class="card-text">
                                            <i class="bi bi-clock text-secondary"></i>
                                            Available Book Time : @Model.RoomAvailableTime
                                            <input type="hidden" asp-for="RoomAvailableTime" />
                                        </small>
                                    </div>
                                    <div class="row">
                                        <small class="card-text">
                                            <i class="bi bi-person-circle text-danger"></i>
                                            Seat : @Model.Seat
                                            <input type="hidden" asp-for="Seat" />
                                        </small>
                                    </div>
                                    <div class="row">
                                        <small class="card-text">
                                            <i class="bi bi-box-seam text-warning"></i>
                                            Facilities : @Model.RoomFacilities
                                            <input type="hidden" asp-for="RoomFacilities" />
                                        </small>
                                    </div>
                                    <div class="row">
                                        <small class="card-text">
                                            <i class="bi bi-building text-info"></i>
                                            Floor : @Model.RoomFloor
                                            <input type="hidden" asp-for="RoomFloor" />
                                        </small>
                                    </div>
                                    <div class="row">
                                        <small class="card-text">
                                            <i class="bi bi-chat-text-fill text-warning"></i>
                                            Remark : @Model.Remark
                                            <input type="hidden" asp-for="Remark" />
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label asp-for="BookingDate" class="control-label">
                            <i class="bi bi-calendar3-week text-success"></i>
                            <strong>Booking Date</strong>
                        </label>
                        <input type="date" id="txtDate" asp-for="BookingDate" class="form-control" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <label asp-for="BookingStartTime" class="control-label">
                            <i class="bi bi-clock"></i>
                            <strong>Booking StartTime</strong>
                        </label>
                        <input type="time" id="txtBookingStartTime" asp-for="BookingStartTime" class="form-control" />
                        <span asp-validation-for="BookingStartTime" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <label asp-for="BookingEndTime" class="control-label">
                            <i class="bi bi-clock"></i>
                            <strong>Booking EndTime</strong>
                        </label>
                        <input type="time" id="txtBookingEndTime" asp-for="BookingEndTime" class="form-control" />
                        <span asp-validation-for="BookingEndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label asp-for="FullName" class="control-label">
                            <i class="bi bi-person-badge"></i>
                            <strong>Name</strong>
                        </label>
                        <input type="text" asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <label asp-for="Position" class="control-label">
                            <i class="bi bi-card-heading"></i>
                            <strong>Position</strong>
                        </label>
                        <input type="text" id="txtPosition" asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <label asp-for="Department" class="control-label">
                            <i class="bi bi-building"></i>
                            <strong>Department</strong>
                        </label>
                        <input type="text" id="txtDepartment" asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label asp-for="Email" class="control-label">
                            <i class="bi bi-envelope text-danger"></i>
                            <strong>Email</strong>
                        </label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label asp-for="PhoneNumber" class="control-label">
                            <i class="bi bi-telephone text-info"></i>
                            <strong>Phone Number</strong>
                        </label>
                        <input type="text" id="txtPhoneNumber" asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label asp-for="Objective" class="control-label">
                            <i class="bi bi-box-seam text-warning"></i>
                            <strong>Objective</strong>
                        </label>
                        <select asp-for="Objective" class="form-control" id="ddlObjective" asp-items="ViewBag.ObjectiveLists">
                            <option value="0"> -- Objectives -- </option>
                        </select>
                        <span asp-validation-for="Objective" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label asp-for="MoreRequest" class="control-label">
                            <i class="bi bi-question-square text-primary"></i>
                            <strong>More Request</strong>
                        </label>
                        <input type="text" id="txtMoreRequest" asp-for="MoreRequest" class="form-control" />
                        <span asp-validation-for="MoreRequest" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-md-2 text-center my-auto">                        
                        <button type="submit" class="btn btn-outline-danger" onclick="return ValidateForm();">
                            <i class="bi bi-chevron-right"></i> Next
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function ValidateForm()
    {
        var objective = $('#ddlObjective').val();

        if(objective == '0')
        {
            mySweetAlert('', 'Please select objective', 'error', 400);

            return false;
        }

        return true;
    }

    function mySweetAlert(title, text, icon, width) {
        Swal.fire({
            title: title,
            text: text,
            icon: icon,
            showCancelButton: false,
            width: width,
        });
    }
</script>